proc clean 0 0
  {close output}
  outputfd read
  copy 0 != if [(os.close) 0]
  disc

  {close input}
  inputfd read
  copy 0 != if [(os.close) 0]
  disc
  
  identstack read
  copy 0 != if [(seq.free) 0]
  disc

  ret
end
  
proc exit 0 0
  (clean)

  -1 quit
  ret
end

proc noprocblock 0 0
  0 1 (log.level)
  "ERR"
  "Proc not found: " (log.msg)
  blockbuffer 1 + (log.cat)
  (log.log)
  (exit)

  ret
end


proc noproc 0 0
  0 1 (log.level)
  "ERR"
  "Proc not found: " (log.msg)
  cmdbuffer 1 + (log.cat)
  (log.log)
  (exit)
  
  ret
end

