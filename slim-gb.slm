proc help 1 0
  copy HELP_VERSION == if [
    "slim compiler v" (cstr.print) (version) (cstr.println)
    (exit)
  ]
  "Help"
  covr HELP_ARGS == if [
    disc
    "ERROR: You must compile exactly 1 file"
