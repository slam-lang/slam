proc getescape 1 1
  copy 'e' == if [ disc 27 ret ]
  copy 'r' == if [ disc 13 ret ]
  copy 'n' == if [ disc 10 ret ]
  copy 't' == if [ disc 9  ret ]
  copy '0' == if [ disc 0  ret ]
  ret
end

