  copy "--include" (cstr.eq)
  if [disc 1 + (setinclude) 0 ret]
  copy "-o" (cstr.eq)
  if [disc 1 + (setoutput) 0 ret]
  copy "--output" (cstr.eq)
  if [disc 1 + (setoutput) 0 ret]
  copy "-s" (cstr.eq)
