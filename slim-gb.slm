proc checkpopb 2 0
  parsestackblock read swap -
  parsestackblock swap put disc
  parsestackblock read
  0 < if [
    copy (cstr.println)
    procstacktab read (tab.print)
    disc -1 quit
  ]
  disc
  ret
end

proc addstackb 1 0
  parsestackblock read swap +
  parsestackblock swap put disc

  ret
end


proc checkpop 2 0
  parsestack read swap -
  parsestack swap put disc
  parsestack read
  0 < if [
    copy (cstr.println)
    procstacktab read (tab.print)
    disc -1 quit
  ]
  disc
  ret
end

